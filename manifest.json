{
  "manifest_version": 3,
  "name": "Easy Web Blur - 簡単Webぼかし",
  "version": "1.0.0",
  "description": "Webサイト上の任意の部分に簡単にぼかし効果を適用できます。",
  "icons": {
    "48": "icons/icon-on.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "action": {
    "default_icon": {             
      "16": "icons/icon-off.png"   
    },
    "default_title": "クリックして開始",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
